@model IEnumerable<Project53.Areas.Identity.Data.ThePlannedCourse>

@{
    ViewData["Title"] = "APE";
}
<html lang="en">
<head>
    <meta charset="utf-8">
    
    <script src="/js/objects.js"></script>
    <!--
    <script src="/js/thebutton.js"></script>
    -->
    <link rel="stylesheet" href="/css/Planner.css">


</head>
<body>
    <div class="grid-container">
        <div class="header">
            <div>
                <h1>PAPE</h1>
                <p><strong>P</strong>neumonoultramicroscopicsilicovolcanoconiosis <strong>A</strong>cademic <strong>P</strong>lanning <strong>E</strong>nvironment</p>
            </div>

            <div class="studentInfo">

                <div id="infoStudent">
                    <p class="infoP"><strong>Student:</strong> Joe Mamma</p>

                </div>

                <div id="infoMajor">
                    <p class="infoP"><strong>Major:</strong> Computer Science</p>
                </div>

                <div id="infoCatalog">
                    <p class="infoP"><strong>Catalog:</strong> 1994</p>
                </div>

                <div id="infoMinor">
                    <p class="infoP"><strong>Minor:</strong> Bible</p>
                </div>

            </div>
            <!--
            <script src="/js/whoami.js"></script>
            -->

            <div class="headerButtons">


                <button id="log">
                    <img src="/Pictures/powerOff.png" alt="log out"><br>
                    <strong>Log Out</strong>
                </button>

                <div class="options">
                    <button>
                        <img src="/Pictures/settingsCog.png" alt="options"><br>
                        <strong>Choose Plan:</strong><br>
                        <select id="plans">
                            <option>Default Plan</option>
                            <option>Other Plan</option>
                            <!--inserts-->
                        </select>
                    </button>
                    


                </div>

                <button>
                    <img src="/Pictures/saveAs.png" alt="save"><br>
                    <strong>Save</strong>
                </button>

            </div>
        </div>

        <div class="courseReqs" ondrop="drop(event)" ondragover="allowDrop(event)">
            <div id="accordion"></div>
            <!--
            <script src="/js/acc.js"></script>
            -->
        </div>

        <div class="schedule">
            <div class="grid-Schedule">

                <script src="/js/Planfill.js"></script>

            </div>
        </div>

        <div class="validation">

            <h1>Link:</h1>

        </div>

        <div class="courseFinder">
            <div id="catalog">
                <table id="catalogTable">
                    <thead>
                        <tr>
                            <th>Course ID</th>
                            <th>Course Name</th>
                            <th>Description</th>
                            <th>Credits</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- catalog data will be dynamically added here -->
                    </tbody>
                </table>
            </div>

        </div>
    </div>
    <!--
    <script src="/js/table.js"></script>
    -->

</body>
</html>